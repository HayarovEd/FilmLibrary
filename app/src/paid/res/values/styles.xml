<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbar">
        <item name="android:background">@color/soft</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_margin">@dimen/margin_half</item>
        <item name="android:textSize">@dimen/margin_full</item>
    </style>
    <style name="title_movie_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/margin_half</item>
        <item name="android:textSize">@dimen/margin_twin</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/teal_700</item>
    </style>
    <style name="content_movie_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/margin_half</item>
        <item name="android:textSize">@dimen/margin_full</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/teal_700</item>
    </style>

</resources>